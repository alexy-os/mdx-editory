{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [
    "**/.env",
    "**/.env.local",
    "turbo.json"
  ],
  "globalEnv": [
    "NODE_ENV"
  ],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true,
      "interactive": true,
      "outputs": ["dist/**"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "build/**", ".next/**"],
      "cache": true
    },
    "build:test": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "cache": true
    },
    "test": {
      "dependsOn": ["build"],
      "outputs": [],
      "cache": true
    },
    "lint": {
      "outputs": [],
      "cache": true,
      "persistent": false
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    },
    "preview:test": {
      "dependsOn": ["build:test"],
      "cache": false,
      "persistent": true
    },
    "dev:test": {
      "cache": false,
      "persistent": true
    },
    "analyze": {
      "dependsOn": ["^analyze"],
      "outputs": ["dist/**"],
      "cache": true
    }
  },
  "ui": "tui"
}
